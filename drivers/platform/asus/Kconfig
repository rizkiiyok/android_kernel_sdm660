menu "Asus Machine"

config MACH_ASUS
	bool "ASUS devices"
	help
	  This enables support for ASUS devices.

config MACH_ASUS_SDM660
	bool
	prompt "ASUS device"
	default MACH_ASUS_DUMMY

config MACH_ASUS_DUMMY
	bool "Dummy device"
	help
	  A stub configuration that doesn't enable support for anything.

config MACH_ASUS_X01BD
	bool "ZenFone Max Pro (M2)"
	select MACH_ASUS_SDM660
	help
	  This enables support for ASUS ZenFone Max Pro (M2).

endmenu

menu "Common"

endmenu
